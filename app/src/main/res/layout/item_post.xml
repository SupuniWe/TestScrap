<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layout_inner"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPostPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/format_post_list_published_by"
                android:textSize="@dimen/text_size_details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPostVerifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_layout_inner"
                android:text="@string/format_post_list_published_by"
                android:textSize="@dimen/text_size_details"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgPostImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/text_input_distance"/>

            <!--<ImageView-->
            <!--android:id="@+id/imgVerifiedImage"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginTop="@dimen/text_input_distance"-->
            <!--android:layout_weight="1" />-->

            <TextView
                android:id="@+id/txtPostPublished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Just now" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>